<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />

            <gradient
                android:angle="270"
                android:centerColor="#ffE8F4F6"
                android:centerY="0.75"
                android:endColor="#ffEFF9F9"
                android:startColor="#ffDEEDF1" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#264199"
                    android:centerY="0.75"
                    android:endColor="#264199"
                    android:startColor="#264199" />
            </shape>
        </clip>
    </item>

</layer-list>