<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
        <style name="MyDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="MyUpdateDialog.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/dialog_updateinfo_button_selector</item>
        <item name="android:textColor">#FF969696</item>
        <item name="android:padding">10dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="MyUpdateDialog.Button.Positive" parent="MyUpdateDialog.Button">
        <item name="android:textColor">#264199</item>
    </style>

    <style name="MyUpdateDialog.Button.Negative" parent="MyUpdateDialog.Button">
    </style>
</resources>
